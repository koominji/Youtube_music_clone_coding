<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommendMV_item_root"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/recommendMV_item_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/recommendMV_item_iv"
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recommendMV_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/recommendMV_item_cv"
        app:layout_constraintTop_toBottomOf="@id/recommendMV_item_cv" />

    <TextView
        android:id="@+id/recommendMV_item_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#9C9292"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/recommendMV_item_cv"
        app:layout_constraintTop_toBottomOf="@id/recommendMV_item_title_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>