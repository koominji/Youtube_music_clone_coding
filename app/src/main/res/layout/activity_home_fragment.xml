<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/home_menu_scroll_hv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/look_chip_title_01_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/home_menu_circle_btn"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="운동"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/look_chip_title_02_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/home_menu_circle_btn"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="휴식"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/look_chip_title_03_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/home_menu_circle_btn"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="에너지 충전"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/look_chip_title_04_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/home_menu_circle_btn"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="출퇴근 , 등교"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/look_chip_title_05_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/home_menu_circle_btn"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="집중"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/home_repeat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="다시 듣기"
            android:textColor="#ffffff"
            android:textSize="45dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_menu_scroll_hv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_repeat_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/home_repeat_tv"
            tools:listitem="@layout/home_repeat_rv_item" />

        <TextView
            android:id="@+id/home_like_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:text="즐겨 듣는 음악"
            android:textColor="#ffffff"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_repeat_rv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_like_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/home_like_tv"
            tools:listitem="@layout/home_like_rv_item" />

        <TextView
            android:id="@+id/home_recommendMV_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:text="추천 뮤직비디오"
            android:textColor="#ffffff"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_like_rv" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recommendMV_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/home_recommendMV_tv"
            tools:listitem="@layout/home_recommend_mv_rv_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>